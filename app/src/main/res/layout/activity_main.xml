<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.magnalleexample.geekbrainsandroid1_2.MainActivityViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0A1D3"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineV3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.80"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineH8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90"
        app:layout_constraintTop_toBottomOf="@+id/viewResult" />

    <TextView
        android:id="@+id/viewHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:textColor="#43431A"
        android:textAlignment="gravity"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = "history" />

    <TextView
        android:id="@+id/viewResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:attr/galleryItemBackground"
        android:backgroundTint="#2D0745"
        android:backgroundTintMode="add"
        android:elegantTextHeight="true"
        android:gravity="center"
        android:padding="8dp"
        android:textAlignment="gravity"
        android:textColor="#E9E773"
        android:textIsSelectable="true"
        android:textSize="@dimen/resultViewTextSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/guidelineH1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewHistory" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMC"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/mc"
        android:onClick="@{()->viewModel.MC()}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH1" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMR"
        style="@style/Buttons"
        android:text="@string/mr"
        android:onClick="@{()->viewModel.MR()}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH2"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV1"
        app:layout_constraintRight_toRightOf="@+id/guidelineV2"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH1"
        app:strokeColor="#E9E773" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMPLUS"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/mPlus"
        android:onClick="@{()->viewModel.MPLUS()}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH2"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV2"
        app:layout_constraintRight_toRightOf="@+id/guidelineV3"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMMINUS"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/mMinus"
        android:onClick="@{()->viewModel.MMINUS()}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH2"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSqr"
        style="@style/ImageButton"
        android:drawableLeft="@drawable/ic_sqr"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSqrt"
        style="@style/ImageButton"
        android:drawableLeft="@drawable/ic_sqrt"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH4"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV1"
        app:layout_constraintRight_toRightOf="@+id/guidelineV2"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1div"
        style="@style/ImageButton"
        android:drawableLeft="@drawable/ic_div"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH4"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV2"
        app:layout_constraintRight_toRightOf="@+id/guidelineV3"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH3" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPlus"
        style="@style/Buttons"
        android:text="@string/plus"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH4"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMinus"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/minus"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH5"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH4" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button1"
        style="@style/Buttons"
        android:text="@string/_1"
        android:onClick="@{() -> viewModel.inputNumber('1')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH5" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button2"
        style="@style/Buttons"
        android:text="@string/_2"
        android:onClick="@{() -> viewModel.inputNumber('2')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH6"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV1"
        app:layout_constraintRight_toRightOf="@+id/guidelineV2"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button3"
        style="@style/Buttons"
        android:text="@string/_3"
        android:onClick="@{() -> viewModel.inputNumber('3')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH6"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV2"
        app:layout_constraintRight_toRightOf="@+id/guidelineV3"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonMUL"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/multiply"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH6"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button4"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/_4"
        android:onClick="@{() -> viewModel.inputNumber('4')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH7"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH6" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button5"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/_5"
        android:onClick="@{() -> viewModel.inputNumber('5')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH7"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV1"
        app:layout_constraintRight_toRightOf="@+id/guidelineV2"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button6"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/_6"
        android:onClick="@{() -> viewModel.inputNumber('6')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH7"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV2"
        app:layout_constraintRight_toRightOf="@+id/guidelineV3"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDIV"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/divide"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH7"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH6" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button7"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/_7"
        android:onClick="@{() -> viewModel.inputNumber('7')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineV1"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH7" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button8"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/_8"
        android:onClick="@{() -> viewModel.inputNumber('8')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH8"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV1"
        app:layout_constraintRight_toRightOf="@+id/guidelineV2"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button9"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/_9"
        android:onClick="@{() -> viewModel.inputNumber('9')}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH8"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV2"
        app:layout_constraintRight_toRightOf="@+id/guidelineV3"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH7" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonRESULT"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/equals"
        android:onClick="@{() -> viewModel.equals()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH7"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button0"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/_0"
        android:onClick="@{() -> viewModel.inputNumber('0')}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/guidelineV2"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH8" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPOINT"
        style="@style/Buttons"
        android:orientation="vertical"
        android:text="@string/divider"
        android:onClick="@{() -> viewModel.inputNumber(',')}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV2"
        app:layout_constraintRight_toRightOf="@+id/guidelineV3"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH8"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonERASE"
        style="@style/ImageButton"
        android:drawableLeft="@drawable/ic_erase"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH3"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV2"
        app:layout_constraintRight_toRightOf="@+id/guidelineV3"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonCE"
        style="@style/Buttons"
        android:text="@string/ce"
        android:onClick="@{() -> viewModel.clearInput()}"
        app:layout_constraintBottom_toBottomOf="@+id/guidelineH3"
        app:layout_constraintLeft_toLeftOf="@+id/guidelineV3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidelineH2" />


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>